<?xml version="1.0"?>
<robot name="autobot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="bot_ros2_control.xacro"/>

  <!-- Base Footprint (reference frame) -->
  <link name="base_footprint"/>

  <!-- Main Base Link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <inertia ixx="0.829" ixy="0" ixz="0" iyy="0.063" iyz="0" izz="0.827"/>
    </inertial>

    <collision name="base_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.37 1.37 0.415"/>
      </geometry>
      <surface>
        <contact>
          <ode>
            <min_depth>0.001</min_depth>
            <max_vel>0</max_vel>
          </ode>
        </contact>
      </surface>
    </collision>

    <visual name="base_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box  size="0.37 1.37 0.415"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 0.8 1"/>
      </material>
    </visual>

  </link>

  <!-- Fixed joint between base_footprint and base_link -->
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.175" rpy="0 0 0"/>
  </joint>


 <link name="base_front_left_steering">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25"/>
      <inertia ixx="0.000633" ixy="0" ixz="0" iyy="0.000633" iyz="0" izz="0.00125"/>
    </inertial>

    <visual name="base_front_left_steering_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.02"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <collision name="base_front_left_steering_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_front_left_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="base_front_left_steering"/>
    <origin xyz="-0.265 0.39 -0.2075" rpy="0 1.57079632679 0"/>
    <limit lower="-0.2616" upper="0.2616" effort="100" velocity="1.0"/>
    <axis xyz="-1 0 0"/>
  </joint>

  <link name="base_front_right_steering">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25"/>
      <inertia ixx="0.000633" ixy="0" ixz="0" iyy="0.000633" iyz="0" izz="0.00125"/>
    </inertial>

    <visual name="base_front_right_steering_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.02"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <collision name="base_front_right_steering_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_front_right_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="base_front_right_steering"/>
    <origin xyz="0.265 0.39 -0.2075" rpy="0 1.57079632679 0"/>
    <limit lower="-0.2616" upper="0.2616" effort="100" velocity="1.0"/>
    <axis xyz="-1 0 0"/>
  </joint>
  
  <!-- ========== FRONT LEFTWHEEL ========== -->

  <link name="base_front_left_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.0181" ixy="0" ixz="0" iyy="0.0306" iyz="0" izz="0.0306"/>
    </inertial>

    <visual name="base_front_left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.13"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <collision name="base_front_left_wheel_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.13"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_front_left_wheel_joint" type="continuous">
    <parent link="base_front_left_steering"/>
    <child link="base_front_left_wheel"/>
    <origin xyz="0 0 -0.075" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

    <!-- ========== FRONT RIGHTWHEEL ========== -->
  

  <link name="base_front_right_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.0181" ixy="0" ixz="0" iyy="0.0306" iyz="0" izz="0.0306"/>
    </inertial>

    <visual name="base_front_right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.13"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <collision name="base_front_right_wheel_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.13"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_front_right_wheel_joint" type="continuous">
    <parent link="base_front_right_steering"/>
    <child link="base_front_right_wheel"/>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- ========== BACK LEFTWHEEL ========== -->
  

  <link name="base_back_left_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.0181" ixy="0" ixz="0" iyy="0.0306" iyz="0" izz="0.0306"/>
    </inertial>

    <visual name="base_back_left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.13"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>

    <collision name="base_back_left_wheel_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.13"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_back_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="base_back_left_wheel"/>
    <origin xyz="-0.335 -0.51 -0.2075" rpy="0 1.57079632679 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

    <!-- ========== BACK RIGHTWHEEL ========== -->
  

  <link name="base_back_right_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.0181" ixy="0" ixz="0" iyy="0.0306" iyz="0" izz="0.0306"/>
    </inertial>

    <visual name="base_back_right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.13"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>

    <collision name="base_back_right_wheel_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.13"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_back_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="base_back_right_wheel"/>
    <origin xyz="0.335 -0.51 -0.2075" rpy="0 1.57079632679 0"/>
    <axis xyz="0 0 -1"/>
  </joint>


 
<!-- ============================================ -->

  <link name="bot_storage_base">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.3132" ixy="0" ixz="0" iyy="0.1071" iyz="0" izz="0.4195"/>
    </inertial>

    <collision name="bot_storage_base_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.8 1.37 0.05"/>
      </geometry>
    </collision>

    <visual name="bot_storage_base_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box  size="0.8 1.37 0.05"/>
      </geometry>
      <material name="rgb">
        <color rgba="0.4 0.9 0.5 1"/>
      </material>
    </visual>
  </link>


  <joint name="bot_storage_base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="bot_storage_base"/>
    <origin xyz="0 0 0.2325" rpy="0 0 0"/>
  </joint>
<!-- ============================================ -->
   <link name="rgb_camera">
    <inertial>
    <origin xyz="-0.03 0 0" rpy="0 0 0"/>
        <mass value="0.1" />
        <inertia ixx="0.000023" ixy="0.0" ixz="0"
            iyy="0.000011" iyz="0" izz="0.000030" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.57079632679" />
      <geometry>
         <mesh filename="file://$(find bot_description)/meshes/3dCamera.DAE" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
          <box size="0.03 0.05 0.02" />
      </geometry>
    </collision>
  </link>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0 0.685 0.15" rpy="0 0.0 1.57079632679"/>
    <parent link="base_link"/>
    <child link="rgb_camera"/>
    <axis xyz="0.0 0 0"/>
  </joint>

  <joint type="fixed" name="camera_optical_joint">
    <origin xyz="0 0 0.151" rpy="0 0 0"/>
    <parent link="rgb_camera"/>
    <child link="camera_link_optical"/>
  </joint> 

   <link name="camera_link_optical">
  </link>

    <gazebo reference="camera_link_optical">
    <sensor name="camera" type="camera">
      <camera>
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>15</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
        <optical_frame_id>camera_link_optical</optical_frame_id>
        <camera_info_topic>camera/camera_info</camera_info_topic>
      </camera>
      <always_on>1</always_on>
      <update_rate>20</update_rate>
      <visualize>true</visualize>
      <topic>camera/image_raw</topic>
    </sensor>
    </gazebo>

 
  <link name="laser_link">
    <!-- <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.3" />
            <inertia ixx="0.000458" ixy="0.0" ixz="0"
            iyy="0.000458" iyz="0" izz="0.000399" />
    </inertial> -->

    <visual>
      <geometry>
        <mesh filename="file://$(find bot_description)/meshes/lidar_3d_v1.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision>

      <geometry>
        <cylinder radius="0.0516" length="0.0717" />
      </geometry>
    </collision>
  </link>

  <link name="lidar_base">
    <!-- <inertial>
      <origin xyz="0 0 0.011" rpy="0 0 0"/>
      <mass value="0.2" />
      <inertia ixx="0.000043" ixy="0.0" ixz="0"
          iyy="0.000043" iyz="0" izz="0.000266" />
    </inertial> -->

    <visual>
    <origin xyz="0 0 0.011" rpy="0 0 0"/>
        <material name="black">
        <color rgba="0.15 0.15 0.15 1"/>
      </material>
      <geometry>
        <cylinder radius="0.0516" length="0.032" />
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.011" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0516" length="0.032" />
      </geometry>
    </collision>
  </link>

    <joint name="lidar_base_joint" type="fixed">
    <origin xyz="0 0 0.25" rpy="0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="lidar_base"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <joint name="laser_joint" type="fixed">
    <origin xyz="0 0 0.027" rpy="0 0.0 0.0"/>
    <parent link="lidar_base"/>
    <child link="laser_link"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <gazebo reference="laser_link">
    <sensor name="lidar" type="gpu_lidar">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <topic>scan</topic>
      <update_rate>5</update_rate>
      <gz_frame_id>laser_link</gz_frame_id>
      <lidar>
        <scan>
          <horizontal>
            <samples>1024</samples>
            <resolution>1.00000</resolution>
            <min_angle>0.000000</min_angle>
            <max_angle>6.280000</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.120000</min>
          <max>12.0</max>
          <resolution>0.02</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </lidar>
    </sensor>
  </gazebo> 


  <joint name="navsat_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link"/>
    <child link="navsat_link" />
  </joint>

  <link name="navsat_link">
  </link>

  <joint name="imu_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link"/>
    <child link="imu_link" />
  </joint>

  <link name="imu_link">
  </link>

  <gazebo reference="imu_link">
    <sensor name="imu" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>  <!-- Higher rate for better fusion -->
      <visualize>true</visualize>
      <topic>/imu</topic>         <!-- Standard IMU topic -->
      <enable_metrics>true</enable_metrics>
      <gz_frame_id>imu_link</gz_frame_id>
      
      <!-- Enhanced IMU parameters for accurate sensing -->
      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>

  <gazebo reference="navsat_link">
    <sensor name="navsat" type="navsat">
      <always_on>1</always_on>
      <update_rate>1</update_rate>
      <topic>navsat</topic>
      <gz_frame_id>navsat_link</gz_frame_id>
    </sensor>
  </gazebo> 

 <!-- Optimized Gazebo wheel physics for accurate odometry -->
  
  <!-- Front wheels Free-rolling, lower friction for Ackermann steering -->
  <gazebo reference="base_front_left_wheel">
    <mu1>0.8</mu1>        <!-- Lower friction for free-rolling front wheels -->
    <mu2>0.6</mu2>        <!-- Reduced lateral friction -->
    <kp>50000.0</kp>      <!-- Higher contact stiffness for less slip -->
    <kd>50.0</kd>         <!-- Higher damping for stability -->
    <minDepth>0.0005</minDepth>  <!-- Smaller penetration depth -->
    <maxVel>10.0</maxVel>        <!-- Lower max velocity for stability -->
    <fdir1>0 -1 0</fdir1>        <!-- Primary friction direction -->
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="base_front_right_wheel">
    <mu1>0.8</mu1>
    <mu2>0.6</mu2>
    <kp>50000.0</kp>
    <kd>50.0</kd>
    <minDepth>0.0005</minDepth>
    <maxVel>10.0</maxVel>
    <fdir1>0 -1 0</fdir1>
    <material>Gazebo/Grey</material>
  </gazebo>
  
  <!-- Rear wheels Drive wheels, optimized for no-slip control -->
  <gazebo reference="base_back_left_wheel">
    <mu1>1.8</mu1>        <!-- Higher friction for drive wheels -->
    <mu2>1.5</mu2>        <!-- High lateral friction to prevent sliding -->
    <kp>100000.0</kp>     <!-- Very high stiffness for accurate control -->
    <kd>100.0</kd>        <!-- Higher damping for precise motion -->
    <minDepth>0.0005</minDepth>  <!-- Smaller penetration depth -->
    <maxVel>10.0</maxVel>        <!-- Lower max velocity for stability -->
    <fdir1>0 -1 0</fdir1>        <!-- Primary friction direction -->
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="base_back_right_wheel">
    <mu1>1.8</mu1>
    <mu2>1.5</mu2>
    <kp>100000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.0005</minDepth>
    <maxVel>10.0</maxVel>
    <fdir1>0 -1 0</fdir1>
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find bot_controller)/config/bot_controller.yaml</parameters>
    </plugin>
    
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu">
      <initial_orientation_as_reference>true</initial_orientation_as_reference>
    </plugin>

    
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
        <render_engine>ogre2</render_engine>
    </plugin>

    
    <plugin filename="gz-sim-navsat-system" name="gz::sim::systems::NavSat">
    </plugin>

  </gazebo>

</robot>
